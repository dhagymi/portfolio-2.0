extends ../base.pug 

block variables 
    - var template = "contact"

block content
    .contact
        section.contact__wrapper
            h1.contact__title
                each line, index in contact.data.titles 
                    span(class=`contact__title__line contact__title__line--${index + 1}` data-animation="fade")=line[lang]
            .contact__subtitles
                each line, index in contact.data.subtitles 
                    span(class=`contact__subtitles__line contact__subtitles__line--${index + 1}` data-animation="fade")=line[lang]
            .contact__body
                each line, index in contact.data.secondary_titles 
                    span(class=`contact__body__line contact__body__line--${index + 1}` data-animation="fade")=line[lang]
                button.contact__body__button=contact.data.button_text[0][lang]
            .contact__footer
                p.contact__footer__thanks(data-animation="fade")=contact.data.thanks[0][lang]
                p.contact__footer__social
                    each item in social 
                        a.contact__footer__social__link(href=item.link.url target=item.link.target data-animation="fade")
                            span.contact__footer__social__line=item.name