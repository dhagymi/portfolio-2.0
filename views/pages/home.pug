extends ../base.pug 

block variables 
    - var template = "home"

block content
    .home
        section.home__wrapper
            .home__mainWrapper
                h1.home__title
                    each title, index in home.data.main_titles
                        span(class=`home__title__line home__title__line--${index + 1}`)=title[lang]
                figure.home__card.home__card--mica
                    img.home__card__image(src=home.data.mica_card[0].image.url, alt=home.data.mica_card[0].image.alt)
                    figcaption.home__card__caption!=home.data.mica_card[0].name
                figure.home__card.home__card--agus
                    img.home__card__image(src=home.data.agus_card[0].image.url, alt=home.data.agus_card[0].image.alt)
                    figcaption.home__card__caption!=home.data.agus_card[0].name

            .home__secondaryWrapper
                h2.home__subtitle
                    each subtitle, index in home.data.secondary_titles
                        span(class=`home__subtitle__line home__subtitle__line--${index + 1}`)=subtitle[lang]
                .home__text
                    each text, index in home.data.home_text
                        div(class=`home__text__column home__text__column--${index + 1}`)!=PrismicDOM.RichText.asHtml(text[lang], Link)